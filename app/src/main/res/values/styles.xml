<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Demo.Header.1" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/header1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Demo.Header.2" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/header2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Demo.Header.3" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/header3</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Demo.Header.1.Add">
        <item name="android:textColor">#11c766</item>
    </style>

    <style name="Demo.Header.1.Remove" >
        <item name="android:textColor">#e13c54</item>
    </style>

    <style name="Demo.Header.1.Fix" >
        <item name="android:textColor">#efc312</item>
    </style>


</resources>
